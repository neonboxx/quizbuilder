<h2>Quiz Edit</h2>

<div class="row margin-top-5">
    <div class="col-md-12">
        {{quiz.quizTitle}}
    </div>
    <div class="col-md-12">
        <div class="input-group input-group-lg">
            <label>Correct message:</label><input type="text" class="form-control" ng-model="quiz.CorrectText" />
        </div>
        <div class="input-group input-group-lg">
            <label>Incorrect message:</label><input type="text" class="form-control" ng-model="quiz.incorrectText" />
        </div>
    </div>
    <div class="col-md-12">
        <h3>Questions:</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Question Title
                    </th>
                    <th>
                        Question Text
                    </th>
                    <th>
                        Question Type
                    </th>

                    <th>
                        Answers
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="question in quiz.Questions">
                    <td >
                        <img class="img-rounded" src="{{question.ImageUrl}}" alt="{{question.ImageUrl}}" /> 
                    </td>
                    <td >
                        {{question.Title}}
                    </td>

                    <td >
                        {{question.QuestionText}}
                    </td>

                    <td >
                        {{question.Type}}
                    </td>

                    <td >
                        {{question.Answers.length}}
                    </td>
                    <td>
                        
                        <div class="btn btn-info icon-camera" ng-click="editQuestion($index)">
                            <span class="glyphicon glyphicon-edit"></span>
                        </div>
                        
                    </td>
                    <td>
                        <div class="btn btn-danger icon-camera" ng-click="delete($index)">
                            <span class="glyphicon glyphicon-remove-sign"></span>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>



        <div class="col-md-10" ng-repeat="question in quiz.Questions">
            <div class="input-group input-group-lg">
                <label>Question title:</label><input type="text" class="form-control" ng-model="question.Title" />
            </div>
            <div class="input-group input-group-lg">
                <label>Question text:</label><input type="text" class="form-control" ng-model="question.QuestionText" />
            </div>
            <h4>Answers:</h4>
            <div class="col-md-8" ng-repeat="answer in question.Answers">
                <div class="input-group input-group-lg">
                    <label>Answer text:</label>
                    <input type="text" class="form-control" ng-model="answer.AnswerText" />
                    <input type="checkbox" class="form-control" ng-model="answer.isCorrect" />
                </div>
            </div>
        </div>
    </div>